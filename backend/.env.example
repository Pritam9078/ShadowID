# DVote Backend Environment Configuration
# Copy this to .env and fill in your values

# === SERVER CONFIGURATION ===
NODE_ENV=development
PORT=3001

# === ALCHEMY CONFIGURATION ===
# Get these from https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here
ALCHEMY_NETWORK=arb-sepolia
ALCHEMY_WEBHOOK_SIGNING_KEY=your_webhook_signing_key_here

# === BLOCKCHAIN CONFIGURATION ===
# Arbitrum Sepolia RPC (can use Alchemy or public)
ARBITRUM_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
CHAIN_ID=421614

# === CONTRACT ADDRESSES (Update after deployment) ===
DAO_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
GOVERNANCE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000
ZK_VERIFIER_ADDRESS=0x0000000000000000000000000000000000000000

# === STYLUS CONFIGURATION ===
# Private key for contract deployment (use with caution)
STYLUS_PRIVATE_KEY=your_private_key_here

# === DATABASE CONFIGURATION ===
# Prisma database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL="file:./dev.db"
# For production PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/dvote?schema=public"

# === AUTHENTICATION ===
JWT_SECRET=your_jwt_secret_here
API_KEY_SECRET=your_api_key_secret_here

# === IPFS CONFIGURATION ===
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
IPFS_API_KEY=your_ipfs_api_key_here

# === CORS CONFIGURATION ===
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === WEBHOOK URLS ===
# Your server's public URL for Alchemy webhooks
WEBHOOK_BASE_URL=https://yourdomain.com/api/webhooks