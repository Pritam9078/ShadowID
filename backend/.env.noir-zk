# Noir ZK Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Blockchain Configuration
ARBITRUM_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_CHAIN_ID=421614

# Contract Addresses (Update these with actual deployed addresses)
DAO_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
SHADOWID_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000  
GOVERNANCE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# Backend Private Key for Contract Operations
# IMPORTANT: Use a dedicated backend wallet, not your main wallet
# Generate a new private key specifically for backend operations
BACKEND_PRIVATE_KEY=your_backend_private_key_here

# Noir Circuit Paths
NOIR_CIRCUITS_BASE_PATH=../zk-circuits/noir
AGE_PROOF_CIRCUIT_PATH=../zk-circuits/noir/age_proof
CITIZENSHIP_PROOF_CIRCUIT_PATH=../zk-circuits/noir/citizenship_proof
ATTRIBUTE_PROOF_CIRCUIT_PATH=../zk-circuits/noir/attribute_proof

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PROOF_GENERATION_RATE_LIMIT=10

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Database Configuration (if needed for caching)
DATABASE_URL=postgresql://username:password@localhost:5432/dvote_zk
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/noir-zk-backend.log

# IPFS Configuration (if needed for storing proofs)
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=true

# Development Tools
DEBUG_MODE=true
VERBOSE_LOGGING=true