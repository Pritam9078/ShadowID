{
  "name": "shadowid-backend",
  "version": "1.0.0",
  "description": "Privacy-preserving identity verification platform backend with zero-knowledge proofs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "websocket": "node websocket-server.js",
    "start-all": "concurrently \"npm run node\" \"npm run websocket\" \"npm run dev\"",
    "zk:setup": "node zk/scripts/setup-circuits.js",
    "zk:compile": "node zk/scripts/compile-all.js",
    "zk:test": "node zk/scripts/test-all.js",
    "zk:prove": "node zk/scripts/generate-proof.js",
    "zk:verify": "node zk/scripts/verify-proof.js",
    "zk:clean": "node zk/scripts/clean-artifacts.js",
    "zk:compile:parallel": "node zk/scripts/compile-all.js --parallel",
    "zk:test:integration": "node zk/scripts/test-all.js --integration",
    "zk:prove:all": "node zk/scripts/generate-proof.js --all",
    "zk:verify:all": "node zk/scripts/verify-proof.js --all",
    "zk:verify:exported": "node zk/scripts/verify-proof.js --exported",
    "zk:clean:all": "node zk/scripts/clean-artifacts.js --all",
    "zk:compile:win": "powershell -ExecutionPolicy Bypass -File zk/scripts/compile-all.ps1",
    "zk:test:win": "powershell -ExecutionPolicy Bypass -File zk/scripts/test-all.ps1",
    "zk:prove:win": "powershell -ExecutionPolicy Bypass -File zk/scripts/generate-proof.ps1",
    "zk:verify:win": "powershell -ExecutionPolicy Bypass -File zk/scripts/verify-proof.ps1",
    "zk:setup:win": "powershell -ExecutionPolicy Bypass -File zk/scripts/setup-circuits.ps1",
    "zk:clean:win": "powershell -ExecutionPolicy Bypass -File zk/scripts/clean-artifacts.ps1"
  },
  "keywords": [
    "identity",
    "governance",
    "defi",
    "ethereum",
    "solidity"
  ],
  "author": "ShadowID Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "ws": "^8.18.3",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "concurrently": "^9.2.1"
  }
}
